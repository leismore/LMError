{
  "compilerOptions":
  {
    "lib":              ["ES2015"],
    "target":            "ES2015",
    "baseUrl":           "./src",
    "outDir":            "./dist",
    "module":            "CommonJS",
    "moduleResolution":  "Node",
    "resolveJsonModule":  true,
    "strict":             true,
    "declaration":        true,
    "allowJs":            false,
    "checkJs":            false,
  },
  "include":            ["src"],
  "exclude":            ["node_modules", "dist", ".git"]
}
